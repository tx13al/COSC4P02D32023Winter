<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/main_dialog_item_detail"
        android:id="@+id/main_dialog_item_detail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/add_item_alert_text" />

    <TextView
        android:id="@+id/add_item_alert_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You want to add this item to the showCase?"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/main_dialog_item_detail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintBottom_toTopOf="@id/add_item_OK_button" />

    <Button
        android:id="@+id/add_item_OK_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:textSize="20dp"
        android:background="@drawable/shape_round_button_blue"
        android:fontFamily="@font/josefin_sans_bold"
        android:textColor="@color/white"
        android:onClick="onClick"
        app:layout_constraintTop_toBottomOf="@id/add_item_alert_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
