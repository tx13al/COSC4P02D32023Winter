<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/control">

    <FrameLayout
        android:id="@+id/control_main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/beige"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"></FrameLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/control_search_bar_container"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/shape_searchbar"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="6dp">

        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
            android:id="@+id/control_search_bar"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:hint="Search..."
            app:iconifiedByDefault="false"
            app:searchIcon="@drawable/location"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/control_logoutButton"
            android:layout_marginEnd="30dp"
            app:layout_constraintWidth_percent="0.7" />

        <ImageButton
            android:id="@+id/control_logoutButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/shape_oval_button"
            android:src="@drawable/logout"
            android:contentDescription="Logout"
            android:onClick="onClick"
            app:layout_constraintEnd_toEndOf="@id/control_search_bar_container"
            app:layout_constraintTop_toTopOf="@id/control_search_bar_container"
            app:layout_constraintBottom_toBottomOf="@id/control_search_bar_container"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/control_constraint_1"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/control_search_bar_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/control_floorOneButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/navy_blue"
            android:text="Level 1"
            android:fontFamily="@font/josefin_sans_medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/control_floorTwoButton"
            android:padding="10dp"
            android:layout_marginStart="15dp"
            android:background="@drawable/shape_round_button_white"
            app:layout_constraintTop_toTopOf="parent"
            android:onClick="onClick" />

        <Button
            android:id="@+id/control_floorTwoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/navy_blue"
            android:fontFamily="@font/josefin_sans_medium"
            android:text="Level 2"
            app:layout_constraintStart_toEndOf="@id/control_floorOneButton"
            android:padding="10dp"
            android:layout_marginStart="15dp"
            app:layout_constraintTop_toTopOf="parent"
            android:onClick="onClick"
            android:background="@drawable/shape_round_button_white" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <HorizontalScrollView
        android:id="@+id/showCase_item_list_scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/bottom_bar"
        android:paddingTop="5dp"
        android:background="@color/gray"
        android:visibility="invisible">
        <LinearLayout
            android:id="@+id/showCase_item_list_scrollView_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">
        </LinearLayout>
    </HorizontalScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/white"
        android:id="@+id/bottom_bar">

        <Button
            android:id="@+id/control_add"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginStart="5dp"
            android:drawableTop="@mipmap/add_image"
            android:text="Add"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.25"
            android:onClick="onClick" />

        <Button
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:id="@+id/control_delete"
            android:text="Delete"
            app:layout_constraintStart_toEndOf="@id/control_add"
            android:drawableTop="@mipmap/delete_image"
            android:background="@drawable/shape_round_button_white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            style="@style/Widget.AppCompat.Button.Borderless"
            app:layout_constraintWidth_percent="0.25"
            android:onClick="onClick" />

        <Button
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:id="@+id/control_change"
            android:text="Change"
            app:layout_constraintStart_toEndOf="@id/control_delete"
            android:drawableTop="@mipmap/edit_image"
            android:background="@drawable/shape_round_button_white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            style="@style/Widget.AppCompat.Button.Borderless"
            app:layout_constraintWidth_percent="0.25"
            android:onClick="onClick" />

        <Button
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:id="@+id/control_more"
            android:text="More"
            android:layout_marginEnd="5dp"
            android:drawableTop="@mipmap/icon_settings"
            android:background="@drawable/shape_round_button_white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/control_change"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/Widget.AppCompat.Button.Borderless"
            app:layout_constraintWidth_percent="0.25"
            android:onClick="onClick" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone"
        android:id="@+id/dim_layout"
        android:clickable="true"
        android:focusable="true" />

</androidx.constraintlayout.widget.ConstraintLayout>