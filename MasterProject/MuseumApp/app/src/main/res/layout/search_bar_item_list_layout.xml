<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/search_bar_item_list_constraint_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/search_bar_item_list_slider_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/search_bar_item_list_constraint_layout">
        <Toolbar
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tool_bar_search_bar_item_list"
            />
        <ImageView
            android:id="@+id/search_bar_item_list_header"
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="@+id/search_bar_item_list_slider_layout"
            app:layout_constraintLeft_toLeftOf="@+id/search_bar_item_list_slider_layout"
            app:layout_constraintRight_toRightOf="@+id/search_bar_item_list_slider_layout"
            android:scaleType="centerInside"
            android:src="@drawable/logo">
        </ImageView>
        <View
            android:id="@+id/search_bar_item_list_line"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            app:layout_constraintTop_toBottomOf="@+id/search_bar_item_list_header"
            android:background="@color/beige"
            >
        </View>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ScrollView
        android:id="@+id/search_bar_item_list_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/search_bar_item_list_slider_layout"
        android:scrollbars="vertical">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/search_bar_item_list_scroll_view_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </androidx.appcompat.widget.LinearLayoutCompat>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>